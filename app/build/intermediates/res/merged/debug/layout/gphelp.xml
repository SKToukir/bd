            android:layout_alignParentLeft="true"
            android:layout_below="@+id/texthelp4"
            android:layout_marginTop="2dp"
            android:text="To Deactivate : Type STOP SB send to 6624."
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/texthelp6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/texthelp5"
            android:layout_marginTop="2dp"
            android:text="Deactivation process: Type SB OFF send to 6624. Ex: SB OFF to 6624"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
