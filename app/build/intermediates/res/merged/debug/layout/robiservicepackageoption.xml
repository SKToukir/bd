<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alertstyle"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/robiservicepackoption" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon" />

    <Button
        android:id="@+id/robinibondhonbuttonweekly"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_alignLeft="@+id/robinibondhonbuttondaily"
        android:layout_alignRight="@+id/robinibondhonbuttondaily"
        android:layout_below="@+id/robinibondhonbuttondaily"
        android:layout_marginTop="14dp"
        android:clickable="false"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignRight="@+id/robinibondhonbuttonweekly"
        android:layout_below="@+id/robinibondhonbuttonweekly"
        android:layout_marginTop="29dp"
        android:src="@drawable/robibatiltext" />

    <Button
        android:id="@+id/robibatilbuttonoption"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/robibatil" />

    <Button
        android:id="@+id/robinibondhonbuttondaily"
        android:layout_width="320dp"
        android:layout_height="27dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/robinibondhondailypack" />

</RelativeLayout>