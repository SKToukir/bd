<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alertstyle"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:src="@drawable/robisofolweekly" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/robisofolweekly" />

    <Button
        android:id="@+id/robiShuruButton"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/robishurubutton" />

    <Button
        android:id="@+id/robiNibondhonBatilButton"
       android:layout_width="130dp"
        android:layout_height="27dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/robinibondhonbatilbutton" />

</RelativeLayout>
